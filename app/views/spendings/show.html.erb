<%= render "shared/header" %>

<div class="show-content">
  <div class="show-category">
    <h1 class="show-category-name"><%= @spending.category %></h1>
  </div>
  <table class="detail-table">
    <tbody>
      <tr>
        <th class="detail-column">日付</th>
        <td class="detail-value"><%= @spending.date %></td>
      </tr>
      <tr>
        <th class="detail-column">金額</th>
        <td class="detail-value"><%= @spending.price %></td>
      </tr>
      <tr>
        <th class="detail-column">メモ</th>
        <td class="detail-value"><%= @spending.memo %></td>
      </tr>
    </tbody>
  </table>
</div>