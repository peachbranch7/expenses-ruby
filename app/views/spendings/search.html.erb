<%= render "shared/header" %> 
<div class="calendar-content">
  <%= month_calendar events: @spendings do |date, spendings| %>
    <%= date.day %>

    <% spendings.each do |spending| %>
      <br><%= link_to spending.category, spending_path(spending.id), class:"calendar_link" %> -<%= link_to spending.price, spending_path(spending.id), class:"calendar_link_price" %>
    <% end %>
  <% end %>
</div>
<%= render "shared/footer" %>